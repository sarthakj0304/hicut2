# HICUT Expo Frontend Environment Variables
# Place this file in your project root as .env

# API Configuration
EXPO_PUBLIC_API_URL=http://106.219.121.79:3000/api

# (Optional) API Key if needed
EXPO_PUBLIC_API_KEY=your_api_key_here

# Map Services
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# Authentication (Frontend usually does not need JWT secrets)

# Database (Frontend usually does not need DB URI)

# File Storage (if used by frontend)
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
EXPO_PUBLIC_CLOUDINARY_API_KEY=your_cloudinary_api_key
EXPO_PUBLIC_CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Push Notifications
EXPO_PUBLIC_FCM_SERVER_KEY=your_fcm_server_key
EXPO_PUBLIC_EXPO_PUSH_TOKEN=your_expo_push_token

# Payment Processing
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
EXPO_PUBLIC_STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Analytics & Monitoring
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn
EXPO_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Document Verification
EXPO_PUBLIC_ONFIDO_API_TOKEN=your_onfido_api_token
EXPO_PUBLIC_JUMIO_API_TOKEN=your_jumio_api_token

# SMS/Phone Verification
EXPO_PUBLIC_TWILIO_ACCOUNT_SID=your_twilio_account_sid
EXPO_PUBLIC_TWILIO_AUTH_TOKEN=your_twilio_auth_token
EXPO_PUBLIC_TWILIO_PHONE_NUMBER=+1234567890

# Email Services
EXPO_PUBLIC_SENDGRID_API_KEY=your_sendgrid_api_key
EXPO_PUBLIC_MAILGUN_API_KEY=your_mailgun_api_key

# Environment
NODE_ENV=development
EXPO_PUBLIC_APP_ENV=development

# Expo Devtools
EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0
EXPO_USE_FAST_RESOLVER=1

# Debug
DEBUG=hicut:*
LOG_LEVEL=debug
